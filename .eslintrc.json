{
  "env": {
    "node": true,
    "es2021": true
  },
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "extends": [
    "airbnb-base",
    "plugin:node/recommended"
  ],
  "rules": {
    "no-console": "off",
    "global-require": "off",
    "arrow-parens": [
      "error",
      "as-needed"
    ],
    "import/no-dynamic-require": "off",
    "max-len": [
      "error",
      150,
      2,
      {
        "ignoreUrls": true,
        "ignoreComments": true,
        "ignoreRegExpLiterals": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true
      }
    ],
    "no-param-reassign": "off",
    "no-bitwise": "off",
    "no-restricted-syntax": "off",
    "default-case": "off",
    // This gets in a way when developing initinally
    "prefer-const": "off",
    "no-loop-func": "off",
    "object-curly-newline": [
      "error",
      {
        "ObjectExpression": {
          "minProperties": 6,
          "multiline": true,
          "consistent": true
        },
        "ObjectPattern": {
          "minProperties": 6,
          "multiline": true,
          "consistent": true
        },
        "ImportDeclaration": "never",
        "ExportDeclaration": "never"
      }
    ]
  }
}